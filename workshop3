<body>

  <h1>Workshop 3: JavaScript Events</h1>

  <!-- Exercise 1 -->
  <h2>Exercise 1</h2>
  <button onclick="showAlert()">Click me</button>
  <button onclick="showTable()">Show table</button>
  <button onclick="getGeolocation()">Geolocation</button>
  <div id="output"></div>

  <hr>

  <!-- Exercise 2 -->
  <h2 id="ex2" onmouseover="mouseOver()" onmouseout="mouseOut()">Exercise 2</h2>

  <hr>

  <!-- Exercise 3 -->
  <h2>Exercise 3</h2>
  <form onsubmit="return checkForm()">
    <textarea id="textdata" onfocus="focusText()" onkeydown="countKeys()"></textarea><br>
    <span id="charcount">0</span> characters<br>
    <button type="submit">Send me</button>
  </form>

  <hr>

  <!-- Exercise 4 -->
  <h2>Exercise 4</h2>
  <div id="coordinates" onmousemove="showCoords(event)">
    Move mouse here
  </div>
  <p id="coords"></p>

  <script>
    // --- Exercise 1 ---
    function showAlert() {
      const now = new Date();
      alert("You clicked me! " + now);
    }

    function showTable() {
      document.getElementById("output").innerHTML = `
        <table>
          <tr><th>Name</th><th>Position</th><th>Salary</th></tr>
          <tr><td>Tiger Nixon</td><td>System Architect</td><td>$320,800</td></tr>
          <tr><td>Garrett Winters</td><td>Accountant</td><td>$170,750</td></tr>
          <tr><td>Ashton Cox</td><td>Junior Technical Author</td><td>$86,000</td></tr>
          <tr><td>Cedric Kelly</td><td>Senior JavaScript Developer</td><td>$433,060</td></tr>
          <tr><td>Airi Satou</td><td>Accountant</td><td>$162,700</td></tr>
        </table>
      `;
    }

    function getGeolocation() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function(position) {
          const lat = position.coords.latitude;
          const lon = position.coords.longitude;
          console.log("Latitude: " + lat + ", Longitude: " + lon);
          document.getElementById("output").innerHTML =
            `Your location: Latitude ${lat}, Longitude ${lon}`;
          window.open(`https://www.google.com/maps?q=${lat},${lon}`);
        }, function() {
          alert("Unable to retrieve your location.");
        });
      } else {
        alert("Geolocation not supported by this browser.");
      }
    }

    // --- Exercise 2 ---
    function mouseOver() {
      console.log("Stepped over my mouse!");
    }

    function mouseOut() {
      alert("Bye bye mouse!");
    }

    // --- Exercise 3 ---
    let count = 0;
    function focusText() {
      const textarea = document.getElementById("textdata");
      textarea.style.backgroundColor = "#333";
      textarea.placeholder = "Please fill in the form with proper data.";
    }

    function countKeys() {
      count++;
      document.getElementById("charcount").textContent = count;
    }

    function checkForm() {
      const value = document.getElementById("textdata").value.trim();
      if (value === "") {
        alert("Please fill in the form before sending!");
        return false;
      } else {
        alert("Form submitted successfully!");
        return true;
      }
    }

    // --- Exercise 4 ---
    function showCoords(event) {
      const x = event.clientX;
      const y = event.clientY;
      console.log("X: " + x + ", Y: " + y);
      document.getElementById("coords").innerHTML = `Coordinates: X=${x}, Y=${y}`;
    }
  </script>

</body>
</html>

